{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "node_modules/@figma"]
  }
}
